<!DOCTYPE html>
<html lang="it">
<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Contatti - MechFinder, trova il meccanico più adatto a te">
        <meta name="keywords" content="meccanici, contatti, assistenza, riparazioni auto, officina">
        <meta name="author" content="MechFinder">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <title>Meccanici - MechFinder</title>

</head>
<body>
    <%- include('./common/header') %>

    <main>
        <div class="container py-5">
            <h1 class="mb-4">I Nostri Meccanici</h1>
            
            <div class="row">
                <!-- Filtri laterali -->
                <div class="col-lg-3">
                    <div class="filter-sidebar">
                        <div class="filter-card">
                            <h4 class="mb-3">Filtri</h4>
                            <form action="/meccanici" method="GET">
                                <div class="mb-3">
                                    <label for="nome" class="form-label">Nome o Officina</label>
                                    <input type="text" class="form-control" id="nome" name="nome" value="<%= filtri.nome %>" placeholder="Nome, cognome o officina">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="specializzazione" class="form-label">Specializzazione</label>
                                    <select class="form-select" id="specializzazione" name="specializzazione">
                                        <option value="">Tutte le specializzazioni</option>
                                        <% specializzazioni.forEach(spec => { %>
                                            <option value="<%= spec.specializzazione %>" <%= filtri.specializzazione === spec.specializzazione ? 'selected' : '' %>><%= spec.specializzazione %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="citta" class="form-label">Città</label>
                                    <select class="form-select" id="citta" name="citta">
                                        <option value="">Tutte le città</option>
                                        <% citta_list.forEach(c => { %>
                                            <option value="<%= c.citta %>" <%= filtri.citta === c.citta ? 'selected' : '' %>><%= c.citta %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary">Applica filtri</button>
                                    <button type="reset" class="btn btn-outline-secondary">Reimposta</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Elenco meccanici -->
                <div class="col-lg-9">
                    <% if (meccanici && meccanici.length > 0) { %>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% meccanici.forEach(meccanico => { %>
                                <div class="col">
                                    <div class="card mechanic-card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <img src="<%= meccanico.avatar || '/media/img/default_mechanic.png' %>" alt="<%= meccanico.nome %> <%= meccanico.cognome %>" class="rounded-circle me-3" width="70" height="70" style="object-fit: cover;">
                                                <div>
                                                    <h5 class="card-title"><%= meccanico.nome_officina || `${meccanico.nome} ${meccanico.cognome}` %></h5>
                                                    <p class="card-text text-muted mb-0"><%= meccanico.specializzazione %></p>
                                                </div>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <div class="rating">
                                                    <% for(let i=0; i<Math.floor(meccanico.valutazione); i++) { %>
                                                        <i class="fas fa-star text-warning"></i>
                                                    <% } %>
                                                    <% for(let i=0; i<(5-Math.floor(meccanico.valutazione)); i++) { %>
                                                        <i class="far fa-star text-warning"></i>
                                                    <% } %>
                                                    <span class="ms-2"><%= meccanico.valutazione.toFixed(1) %></span>
                                                    <span class="text-muted">(<%= meccanico.numero_recensioni %> recensioni)</span>
                                                </div>
                                            </div>
                                            
                                            <p class="mb-1"><i class="fas fa-map-marker-alt text-danger me-2"></i> <%= meccanico.citta || 'N/D' %></p>
                                            <p class="mb-3"><i class="fas fa-phone-alt text-primary me-2"></i> <%= meccanico.telefono || 'N/D' %></p>
                                            
                                            <% if (meccanico.descrizione) { %>
                                                <p class="card-text mb-3"><%= meccanico.descrizione.length > 100 ? meccanico.descrizione.substring(0, 100) + '...' : meccanico.descrizione %></p>
                                            <% } else { %>
                                                <p class="card-text mb-3 text-muted fst-italic">Nessuna descrizione disponibile</p>
                                            <% } %>
                                            
                                            <div class="d-flex justify-content-between">
                                                <a href="/meccanici/<%= meccanico.id %>" class="btn btn-primary">Visualizza profilo</a>
                                                <% if (isAuthenticated && isCliente) { %>
                                                    <a href="/riparazioni/richiedi/<%= meccanico.id %>" class="btn btn-outline-success">Richiedi preventivo</a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info text-center py-5">
                            <i class="fas fa-search fa-3x mb-3"></i>
                            <h3>Nessun meccanico trovato</h3>
                            <p>Prova a modificare i filtri di ricerca.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <%- include('./common/footer') %>
    <%- include('./common/modals') %>
    <%- include('./common/scripts') %>
</body>
</html>